{% for item in collections.sections %}
  {% if item.data.type === 'about' %}
    <div id="about" class=" w-full py-24 px-6 rounded-b-[200px]  min-h-screen bg-outrageousorange-400 ">
        
      <div class="m-6 grid  items-center pb-12" >
        <h2 class="justify-center mb-4 text-4xl font-serif font-bold tracking-wider text-center text-fairpink-100 pb-12">{{ item.data.title }}</h2>
    
        
        <div class="text-2xl font-medium text-cornflowerlilac-100 text-center md:px-26 ">
          {{ item.templateContent | safe }}
        </div>
      </div>

      <div>
        <img class="max-w-full mx-auto my-12 w-4/5 rounded-[200px] border-cornflowerlilac-300 border-8" src="/img/DSCF7855_small.webp" alt="Picture of Tereza">
      </div>

      <div class="grid   justify-center w-full py-24 pb-12">
        <a class="px-10 py-2 text-gray-100 bg-eden-900 rounded-full shadow-md text-lg hover:bg-gray-800 hover:border-red" href="#solutions">I want to know HOW</a>
      
      </div>
    </div>
    
  {% endif %}
{% endfor %}