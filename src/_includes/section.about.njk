{% for item in collections.sections %}
  {% if item.data.type === 'about' %}
    <div id="about" class="flex flex-col items-center w-full min-h-screen py-12 justify-left">
      <div class="self-center w-full px-4 sm:w-2/3 xl:w-1/2 sm:px:0">
        <h2 class="mb-4 text-4xl font-bold tracking-wider text-center text-gray-800">{{ item.data.title }}</h2>
        <div class="text-xl font-light text-justify text-black">
          {{ item.templateContent | safe }}
        </div>
        <img class="max-w-full mx-auto my-12" src="/img/IMG_1211.webp" alt="Picture of Tereza">
      </div>
      <div class="flex flex-row justify-center w-full">
        <a class="px-10 py-2 text-lg text-gray-200 rounded-full shadow-md bg-amber-600 hover:bg-gray-800 hover:border-red" href="#features">More about Coaching</a>
      </div>
    </div>
  {% endif %}
{% endfor %}